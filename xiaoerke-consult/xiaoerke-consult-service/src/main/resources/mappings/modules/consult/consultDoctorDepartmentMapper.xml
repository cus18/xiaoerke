<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cxqm.xiaoerke.modules.consult.dao.ConsultDoctorDepartmentDao" >
  <resultMap id="BaseResultMap" type="com.cxqm.xiaoerke.modules.consult.entity.ConsultDoctorDepartmentVo" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="sorting" property="sorting" jdbcType="SMALLINT" />
    <result column="isShow" property="isShow" jdbcType="VARCHAR" />
  </resultMap>

  <select id="findDepartmentListByInfo" resultMap="BaseResultMap" parameterType="java.util.Map" >
    select * from consult_doctor_department
    where 1=1
    <if test="name != null and name !=''">
      and name = #{name}
    </if>
    <if test="id != null and id !=''">
      and id = #{id}
    </if>
  </select>

  <insert id="saveDepartment" parameterType="com.cxqm.xiaoerke.modules.consult.entity.ConsultDoctorDepartmentVo">
    insert into consult_doctor_department (id,name,sorting) VALUES (#{id},#{name},#{sorting})
  </insert>

  <update id="updateDepartment" parameterType="com.cxqm.xiaoerke.modules.consult.entity.ConsultDoctorDepartmentVo">
    update consult_doctor_department
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="sorting != null">
        sorting = #{sorting},
      </if>
      <if test="isShow != null">
        isShow = #{isShow},
      </if>
    </set>
    where id = #{id}
  </update>
  <delete id="deleteDepartment" parameterType="com.cxqm.xiaoerke.modules.consult.entity.ConsultDoctorDepartmentVo">
    delete from consult_doctor_department where id = #{id}
  </delete>
</mapper>